<launch>
  <node pkg="rbx_vision" name="face_tracker" type="face_tracker.py" output="screen">

    <remap from="input_rgb_image" to="/camera/rgb/image_color" />
    <remap from="input_depth_image" to="/camera/depth/image" />
    
   	<param name="cascade_1" value="$(find rbx_vision)/data/haar_detectors/haarcascade_frontalface_alt2.xml" />
  	<param name="cascade_2" value="$(find rbx_vision)/data/haar_detectors/haarcascade_frontalface_alt.xml" />
  	<param name="cascade_3" value="$(find rbx_vision)/data/haar_detectors/haarcascade_profileface.xml" />

  </node>
</launch>
